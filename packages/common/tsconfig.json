{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "jsx": "react",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}

{
  "compilerOptions": {
    "module": "none",
    "jsx": "react",
    "target": "es6",
    "lib": ["es2015", "dom", "dom.iterable"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "paths" : {
      "@/*" : [
        "./src/components"
      ]
    }
  }
}
